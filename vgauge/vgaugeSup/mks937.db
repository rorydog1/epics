# Read pressure set points
#

record(ai, "$(DEVICE):GtP")
{
    field(DESC, "Channel=1-5 Pressure")
    field(DTYP, "stream")
    field(INP,  "@mks937.proto get_pres($(SENSOR),$(DEVICE):ERR) $(PORT)")
    field(EGU,  $(UNITS='Torr'))
    field(PREC, "9")
    field(LOPR, "0")
    field(HOPR, "1000")
    field(LOW,  "")
    field(HIGH, "")
    field(LOLO, "1e-11")
    field(HIHI, "1e+4")
    field(LSV,  "MINOR")
    field(HSV,  "MINOR")
    field(LLSV, "MAJOR")
    field(HHSV, "MAJOR")
}

